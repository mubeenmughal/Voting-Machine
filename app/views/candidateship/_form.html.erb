<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'layouts/errors', obj: @candidateship %>
      <%= form_with(model: @candidateship,url: user_candidateship_index_path(current_user), class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :Party, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.collection_select(:party_id, Party.all, :id, :name,
            { prompt: "Make your selection from the list below (can't be empty)"}, { class: "custom-select shadow rounded" }) %>
          </div>
        </div>
        <div class="form-group row" id="poll_id">
          <%= f.label :Polling, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.collection_select(:polling_id, Polling.coming_polls, :id, :start_time,
            { prompt: "Make your selection from the list below (can't be empty)"}, { class: "custom-select shadow rounded",  }) %>
          </div>
        </div>

 <div class="form-group row" >
          <%= f.label :Constituency, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <select class="custom-select shadow rounded" name="candidateship[constituency_id]" id="constituencies">
            <option value="">Make your selection from the list below (can't be empty)</option>
            </select>
          </div>
        </div>
<div id="constituencies"></div>
        <div class="form-group row justify-content-center">
          <%= link_to 'Add new party',new_user_party_path(current_user), class: "btn btn-outline-light btn-lg"%>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to home ]', root_path, class: "text-info" %>
    </div>
  </div>
</div>
