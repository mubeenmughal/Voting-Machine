
<div class="signup-form">
    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post })do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      	<div class="row">
        	<div class="col-8 offset-2">
          <h2>Send Invitation</h2>
          </div>
        </div>

      <div class="form-group row">
			  <%= f.label :email , class: "col-form-label col-4" %>
			  <div class="col-10">
         <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" , placeholder: "Enter e-mail", required: true%>
        </div>
      </div>
        <div class="form-group row">
          <%= f.label :cnic,"CNIC", class: "col-form-label col-4" %>
          <div class="col-10">
            <%= f.text_field :cnic, autofocus: true , autocomplete: "email", class: "form-control", placeholder: "Enter CNIC must be 13 digits",required: true %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :Constituency, class: "col-form-label col-4" %>
          <div class="col-10">
            <%= f.collection_select :constituency_id, Constituency.order(:name), :id, :name,
            { prompt: "Make your selection from the list below"}, { class: "form-control " } %>
          </div>
        </div>
        <div class="form-group row userroles">
          <%= f.label :role, class: "col-form-label col-4" %>
          <div class="col-10">
            <%= f.collection_select :role, User.roles.except("admin"), :first, :first,
            { prompt: "Make your selection from the list below"}, { class: "form-control ",onchange: "showDiv(this)" } %>
          </div>
        </div>
		<div class="form-group row">
			<div class="col-8 offset-3">
       <%= f.submit t("devise.invitations.new.submit_button"), class:"btn btn-primary btn-lg" %>
			</div>
    <% end %>
</div>

