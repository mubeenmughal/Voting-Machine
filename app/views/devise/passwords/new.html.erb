
<div class="signup-form">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      	<div class="row">
        	<div class="col-10 offset-1">
          <h2>Forgot password?</h2>
          </div>
        </div>

      <div class="form-group row">
			  <%= f.label :email , class: "col-form-label col-4" %>
			  <div class="col-10">
         <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" , placeholder: "Enter e-mail", required: true%>
        </div>
      </div>

		<div class="form-group row">
			<div class="col-8 offset-1">
       <%= f.submit "Send me reset password instructions", class:"btn btn-primary btn-lg" %>
			</div>

    <% end %>
</div>


