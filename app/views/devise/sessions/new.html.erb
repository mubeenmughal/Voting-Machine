<div class="signup-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name) ,class:"form-horizontal") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      	<div class="row">
        	<div class="col-8 offset-4">
          <h2>Log In</h2>
          </div>
        </div>

      <div class="form-group row">
			  <%= f.label :email , class: "col-form-label col-4" %>
			  <div class="col-10">
         <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" , placeholder: "Enter e-mail", required: true%>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, class: "col-form-label col-4" %>
        <div class="col-10">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true%>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="form-group row">
        <div class="col-1 align-self-center">
          <%= f.check_box :remember_me %>
        </div>
          <%= f.label :remember_me, class: "col-form-label col-4" %>
        </div>
      <% end %>

		<div class="form-group row">
			<div class="col-8 offset-4">
       <%= f.submit "Log In", class:"btn btn-primary btn-lg" %>
			</div>
      <%= render "devise/shared/links" %>
    <% end %>
</div>

