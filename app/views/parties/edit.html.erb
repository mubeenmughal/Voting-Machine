<h1 class="text-center mt-4">Edit Party</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'layouts/errors', obj: @party %>
      <%= form_with(model: @party,:url => url_for(:controller => 'parties', :action => 'update') ,class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :symbol, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.file_field :symbol,direct_upload: true, accept:"image/png, image/gif, image/jpeg", class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to Home ]', root_path, class: "text-info" %>
    </div>
  </div>
</div>

