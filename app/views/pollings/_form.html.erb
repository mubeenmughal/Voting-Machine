<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'layouts/errors', obj: @poll %>
      <%= form_with(model: @poll, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :start_time, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.datetime_field :start_time,min: Date.today, class: "custom-select shadow rounded"  %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :end_time, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.datetime_field :end_time, min: Date.today, class: "custom-select shadow rounded"  %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to home ]', root_path, class: "text-info" %>
    </div>
  </div>
</div>
