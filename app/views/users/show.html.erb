<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-7">
            <div class="profilecard p-3 py-4">
            <% if @user.picture.attached?%>
                <div class="text-center"><%= cl_image_tag(@user.picture.key , size: "150",alt:"Candidate picture", class: "rounded-circle")%> </div>
                <%end%>
                <% if @user.party %>
              <div class="text-center mt-3"> <span class="bg-secondary p-1 px-4 rounded text-white">Party: <%= @user.party.name %></span>
            <% else %>
              <td>No party</td>
              <% end %>
                    <h5 class="mt-2 mb-0"><%= @user.name %></h5> <span>Constituency  : <%= @user.constituency.name %></span>
                    <div class="px-4 mt-1">
                        <p class="fonts">E-mail : <%= @user.email %></p>
                    </div>
                    <ul class="social-list">
                        <li><i class="fa fa-facebook"></i></li>
                        <li><i class="fa fa-dribbble"></i></li>
                        <li><i class="fa fa-instagram"></i></li>
                        <li><i class="fa fa-linkedin"></i></li>
                        <li><i class="fa fa-google"></i></li>
                    </ul>
                    <div class="buttons"> <button class="btn btn-outline-primary px-4">Message</button> <button class="btn btn-primary px-4 ms-3">Contact</button> </div>
                </div>
            </div>
        </div>
    </div>
</div>
